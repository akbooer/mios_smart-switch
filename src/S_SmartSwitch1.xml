<scpd xmlns="urn:schemas-upnp-org:service-1-0">
	<specVersion>
		<major>1</major>
		<minor>0</minor>
	</specVersion>
	<serviceStateTable>
		<stateVariable>
			<name>DeviceId</name>
			<sendEventsAttribute>no</sendEventsAttribute>
			<dataType>ui1</dataType>
		</stateVariable>
		<stateVariable>
			<name>LogLevel</name>
			<sendEventsAttribute>no</sendEventsAttribute>
			<dataType>ui1</dataType>
		</stateVariable>
		<stateVariable>
			<name>SmartSwitchIds</name>
			<sendEventsAttribute>no</sendEventsAttribute>
			<dataType>string</dataType>
		</stateVariable>
	</serviceStateTable>
	<actionList>
		<action>
			<name>AddSwitch</name>
			<argumentList>
				<argument>
					<name>SwitchId</name>
					<direction>in</direction>
					<relatedStateVariable>LogLevel</relatedStateVariable>
				</argument>
			</argumentList>
		</action>
		<action>
			<name>RemoveSwitch</name>
			<argumentList>
				<argument>
					<name>SwitchId</name>
					<direction>in</direction>
					<relatedStateVariable>LogLevel</relatedStateVariable>
				</argument>
			</argumentList>
		</action>
	</actionList>
</scpd>